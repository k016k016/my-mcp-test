# 本番環境の環境変数
# 実際の本番サービス用設定

# 環境識別子
NODE_ENV=production
NEXT_PUBLIC_ENV=production

# マルチドメイン設定（本番）
NEXT_PUBLIC_WWW_URL=https://www.yourdomain.com
NEXT_PUBLIC_APP_URL=https://app.yourdomain.com
NEXT_PUBLIC_ADMIN_URL=https://admin.yourdomain.com
NEXT_PUBLIC_OPS_URL=https://ops.yourdomain.com

# OPS用IP制限（本番環境では必須）
OPS_ALLOWED_IPS=your-office-ip,your-vpn-ip

# Supabase（本番用プロジェクト）
NEXT_PUBLIC_SUPABASE_URL=your-production-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-supabase-anon-key

# Cloudflare R2（本番用バケット）
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-production-r2-access-key
R2_SECRET_ACCESS_KEY=your-production-r2-secret-key
R2_BUCKET_NAME=production-your-bucket-name
R2_PUBLIC_URL=https://your-bucket.r2.dev

# Upstash Redis（本番用インスタンス）
UPSTASH_REDIS_REST_URL=your-production-redis-url
UPSTASH_REDIS_REST_TOKEN=your-production-redis-token

# Sentry（本番環境）
NEXT_PUBLIC_SENTRY_DSN=your-production-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project-production
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# PostHog（本番環境）
NEXT_PUBLIC_POSTHOG_KEY=your-production-posthog-key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Chargebee（本番モード）
CHARGEBEE_SITE=your-chargebee-live-site
CHARGEBEE_API_KEY=your-chargebee-live-api-key

# Resend（本番用APIキー）
RESEND_API_KEY=your-production-resend-api-key
