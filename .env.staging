# ステージング環境の環境変数
# 本番環境のテスト用設定

# 環境識別子
NODE_ENV=production
NEXT_PUBLIC_ENV=staging

# マルチドメイン設定（ステージング）
# VercelのPreview環境URL（developブランチ）
# 注：実際のURLは初回デプロイ後に確認してください
NEXT_PUBLIC_WWW_URL=https://my-mcp-test-git-develop-k016k016s-projects.vercel.app
NEXT_PUBLIC_APP_URL=https://my-mcp-test-git-develop-k016k016s-projects.vercel.app
NEXT_PUBLIC_ADMIN_URL=https://my-mcp-test-git-develop-k016k016s-projects.vercel.app
NEXT_PUBLIC_OPS_URL=https://my-mcp-test-git-develop-k016k016s-projects.vercel.app

# OPS用IP制限（ステージングでテスト）
OPS_ALLOWED_IPS=your-office-ip,your-vpn-ip

# Supabase（ステージング用プロジェクト）
NEXT_PUBLIC_SUPABASE_URL=your-staging-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-supabase-anon-key

# Cloudflare R2（ステージング用バケット）
R2_ACCOUNT_ID=your-r2-account-id
R2_ACCESS_KEY_ID=your-staging-r2-access-key
R2_SECRET_ACCESS_KEY=your-staging-r2-secret-key
R2_BUCKET_NAME=staging-your-bucket-name
R2_PUBLIC_URL=https://staging-your-bucket.r2.dev

# Upstash Redis（ステージング用インスタンス）
UPSTASH_REDIS_REST_URL=your-staging-redis-url
UPSTASH_REDIS_REST_TOKEN=your-staging-redis-token

# Sentry（ステージング環境）
NEXT_PUBLIC_SENTRY_DSN=your-staging-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project-staging
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Logflare（ステージング用）
NEXT_PUBLIC_LOGFLARE_API_KEY=your-staging-logflare-api-key
NEXT_PUBLIC_LOGFLARE_SOURCE_ID=your-staging-logflare-source-id

# Chargebee（テストモード）
CHARGEBEE_SITE=your-chargebee-test-site
CHARGEBEE_API_KEY=your-chargebee-test-api-key

# Resend（ステージング用APIキー）
RESEND_API_KEY=your-staging-resend-api-key
